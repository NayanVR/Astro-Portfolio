---
import IsometricTile from "./util/IsometricTile.astro";
import SectionTitle from "./util/SectionTitle.astro";

const skills = [
    "html",
    "css",
    "js",
    "node",
    "reactjs",
    "nextjs",
    "java",
    "astro",
    "sass",
    "figma",
    "ps",
    "ai",
    "ae",
];
---

<section id="skills">
    <SectionTitle
        title="Let me tell you how I make these amazing things."
        icon="pi"
        bookmarkColor="primary"
    />
    <div class="my-20 sm:px-[10%] px-6 flex flex-wrap sm:gap-x-16 gap-x-12 gap-y-4 justify-center">
        {skills.map((skill) => <IsometricTile skillName={skill} />)}
    </div>
</section>
